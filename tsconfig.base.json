{
  "compileOnSave": false,
  "compilerOptions": {
    "incremental": true,
    "target": "ES2022",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["typings", "node_modules/@types"],

    "composite": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/dist", "node_modules"],
  "files": [],
  "references": [
    /* { "path": "apps/frontend" },
    { "path": "apps/backend" } */
  ]
}
